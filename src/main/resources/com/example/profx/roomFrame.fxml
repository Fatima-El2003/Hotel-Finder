<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.profx.RoomFrameController">
    <VBox prefHeight="443.0" prefWidth="269.0" spacing="5">
        <ImageView fx:id="roomImageView" fitHeight="180.0" fitWidth="269.0" layoutY="10.0" preserveRatio="true" y="10.0" />
        <Label text="Room Number:" />
        <Label fx:id="roomNumberLabel" />
        <Label text="Description:" />
        <Label fx:id="descriptionLabel" />
        <Label text="Price:" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Checkin date" />
      <DatePicker fx:id="checkinDate" />
        <Label fx:id="priceLabel" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Checkout date" />
      <DatePicker fx:id="checkoutDate" />
      <Button fx:id="reserveButton" mnemonicParsing="false" onAction="#reserveRoom" prefHeight="25.0" prefWidth="102.0" style="-fx-background-color: #602fa4; -fx-background-radius: 10px;" text="Reserve" textFill="WHITE" />
        <!-- Add other labels for additional room information -->
    </VBox>
</HBox>
